<h2>Welcome to EpidemiologyApp</h2>
<p><%= link_to "View Departments", departments_path %></p>

<% if @epidemiology_news.present? %>
  <ul>
    <% @epidemiology_news.each do |article| %>
      <li>
        <h4><%= link_to article['title'], article['url'], target: "_blank" %></h4>
        <p><%= article['description'] %></p>
        <p><%= article['publishedAt'] %></p>
      </li>
    <% end %>
  </ul>
<% else %>
<% end %>


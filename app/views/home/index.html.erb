<h3>Departments QR Codes</h3>
<% @departments.each do |department| %>
  <div>
    <h4><%= department.name %></h4>
    <% if department.qr_code.attached? %>
      <%= image_tag url_for(department.qr_code), size: "150x150" %>
      <p>QR Code for <%= department.name %></p>
    <% else %>
      <p>No QR Code available</p>
    <% end %>
  </div>
<% end %>

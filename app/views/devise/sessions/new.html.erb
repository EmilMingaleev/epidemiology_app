<div class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-md">
  <h2 class="text-2xl font-bold text-gray-700 text-center mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-600 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-600 font-medium" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mb-4">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
        <%= f.label :remember_me, class: "ml-2 text-gray-600" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>

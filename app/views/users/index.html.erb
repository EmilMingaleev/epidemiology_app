<h1 class="text-2xl font-bold mb-4">Наши Врачи</h1>

<% if @users.any? %>
  <div class="space-y-4">
    <% @users.each do |user| %>
      <div class="flex items-center p-4 border rounded-lg shadow-sm bg-white space-x-4">
        <% if user.avatar.attached? %>
          <%= image_tag user.avatar.variant(resize_to_fill: [64, 64]), class: "w-16 h-16 rounded-full object-cover" %>
        <% else %>
          <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 text-sm">
            Нет фото
          </div>
        <% end %>
        <div>
          <p><strong>ФИО:</strong> <%= user.full_name %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Должность:</strong> <%= user.position %></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Нет зарегистрированных пользователей.</p>
<% end %>

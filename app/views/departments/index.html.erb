<div class="max-w-2xl mx-auto bg-white p-6 rounded-2xl shadow-lg">
  <h2 class="text-2xl font-bold text-gray-700 mb-4">Отделения</h2>
  
  <ul class="space-y-2">
    <% @departments.each do |department| %>
      <li class="p-2 border-b border-gray-200">
        <%= link_to department.name, department_path(department), class: "text-blue-600 hover:underline" %>
      </li>
    <% end %>
  </ul>
</div>

<%= form_with(model: @department, local: true, html: { class: 'max-w-lg mx-auto bg-white p-6 rounded-2xl shadow-lg' }) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: 'block text-gray-700 font-semibold mb-2' %>
    <%= form.text_field :name, class: 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block text-gray-700 font-semibold mb-2' %>
    <%= form.text_area :description, class: 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="flex justify-end">
    <%= form.submit 'Save', class: 'bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition' %>
  </div>
<% end %>
